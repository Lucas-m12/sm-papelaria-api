generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(uuid())
  name        String
  code        String     @unique
  description String?
  category    String?
  stocks      Stock[]
  prices      Price[]
  purchases   Purchase[]
  sales       Sale[]
}

model Stock {
  id              String   @id @default(uuid())
  productId       String
  transactionType String // 'entry' or 'exit'
  quantity        Int
  dateTime        DateTime @default(now())
  product         Product  @relation(fields: [productId], references: [id])
}

model Price {
  id            String   @id @default(uuid())
  productId     String
  purchasePrice Float
  salePrice     Float
  effectiveDate DateTime
  product       Product  @relation(fields: [productId], references: [id])
}

model Supplier {
  id        String     @id @default(uuid())
  name      String
  contact   String?
  address   String?
  purchases Purchase[]
}

model Purchase {
  id            String   @id @default(uuid())
  productId     String
  supplierId    String
  quantity      Int
  purchasePrice Float
  purchaseDate  DateTime
  product       Product  @relation(fields: [productId], references: [id])
  supplier      Supplier @relation(fields: [supplierId], references: [id])
}

model Sale {
  id        String   @id @default(uuid())
  productId String
  quantity  Int
  salePrice Float
  saleDate  DateTime
  product   Product  @relation(fields: [productId], references: [id])
}
